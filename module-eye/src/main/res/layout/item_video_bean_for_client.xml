<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/size_15"
    android:paddingTop="@dimen/size_8"
    android:paddingRight="@dimen/size_15"
    android:paddingBottom="@dimen/size_8"
    tools:ignore="ResourceName">

    <FrameLayout
        android:layout_width="@dimen/size_160"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:background="@drawable/bg_f4_radius5_shape">

            <ImageView
                android:layout_width="@dimen/size_69"
                android:src="@mipmap/icon_logo"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/detail"
            android:layout_width="@dimen/size_160"
            android:layout_height="@dimen/size_100"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/size_5" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/size_3"
            android:paddingLeft="@dimen/size_3"
            android:paddingRight="@dimen/size_3"
            android:background="@drawable/bg_0_radius3_shape"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/size_11"
                android:textStyle="bold" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:textColor="@color/text_3"
            android:textSize="@dimen/size_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/text_9"
            android:textSize="@dimen/size_12" />
    </LinearLayout>
</LinearLayout>
