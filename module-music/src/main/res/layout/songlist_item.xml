<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/size_5"
    android:paddingRight="@dimen/size_5"
    tools:ignore="ResourceName">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_f4_radius5_shape">

            <ImageView
                android:layout_width="@dimen/size_69"
                android:src="@mipmap/icon_logo"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/size_110"
            app:riv_corner_radius="@dimen/size_5" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/size_3"
        android:maxLines="2"
        android:minLines="2"
        android:paddingLeft="@dimen/size_5"
        android:paddingTop="@dimen/size_5"
        android:paddingRight="@dimen/size_5"
        android:paddingBottom="@dimen/size_15"
        android:textColor="@color/text_9"
        android:textSize="@dimen/size_12" />
</LinearLayout>
